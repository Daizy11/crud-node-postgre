      <a href="/product">Product</a>
      <a href="/productCat">productCategory</a>
    </div>
    <form class="form" action="/api/product/<%= users.data[0].id %>" method="post">
      <div
        class="input-buku"
        style="display: flex; flex-direction: column; width: 25%"
      >
        <h3>Edit</h3>
        <% users.data.forEach((value,index)=>{ %>
         
        <label for="">ID</label>
        <input
          type="number"
          name="id"
          id="id"
          readonly
          value="<%= value.id %>"
        />
        <label for="">Nama Product</label>
        <input name="product" value="<%=  value.product %>" />
        <label for="">Product Category ID</label>
        <input
          class="form-control"
          id="demo-2"
          name="productCategoryID"
          readonly
          value="<%= value.productCategoryID %>"
        />
        <% }) %>
        <button id="btnSubmit" type="submit">Submit</button>
      </div>
    </form>
    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

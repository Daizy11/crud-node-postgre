<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link
      href="https://www.jqueryscript.net/css/jquerysctipttop.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.2/flatly/bootstrap.min.css"
    />
    <link href="src/jquery.inputpicker.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body style="background: #f5f7fa; color: #404e67">
    <div class="navbar">
      <a href="">Stock</a>
      <a href="">Penjualan</a>
      <a href="/">Pembayaran</a>
      <a href="/product">Product</a>
      <a href="/productCat">productCategory</a>
    </div>
    <div class="header">
      <h2>Product</h2>
    </div>
    <div class="content-container">
      <div class="input-buku">
        <a href="add"> <button style="padding: 10px">ADD</button></a>
      </div>

      <div class="table-wrapper">
        <div class="tampilan">
          <h3>Produk</h3>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nama Produk</th>
              <th>Produk CategoryID</th>
              <th style="width: 200px">Actions</th>
            </tr>
          </thead>
        

          <tbody id="tbody">
        
            <% users.data.forEach((row,index)=>{ %>
            <tr>
              <td><%=  (page - 1) * limit + index + 1 %></td>
              <td><%= row.product %></td>
              <td><%= row.productCategoryID %></td>
              <td>
                <a href="/edit/<%= row.id %>">
                  <button class="btn-edit">Edit</button></a
                >
                <a href="/delete/<%= row.id %>"
                  ><button class="btn-delete">Delete</button></a
                >
              </td>
            </tr>

            <% }) %>
          </tbody>
        </table>
        <nav aria-label="Page navigation example" id="nav">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% for (let i = 1; i <= 3; i++) { %>
            <li class="page-item">
              <a class="page-link" href=" # " data-page="<%= i %>"> <%= i %></a>
            </li>
            <% } %>
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <script data-page="<%= page %>" data-limit="<%= limit %>" totalPage="<%= totalPage %>">
       const scriptElement = document.currentScript; 
      const pageLinks = document.querySelectorAll("[data-page]");
      const currentPage = scriptElement.getAttribute("data-page");
      const limit = scriptElement.getAttribute("data-limit");
      const totalPage = scriptElement.getAttribute("totalPage");

      pageLinks.forEach((link) => {
        link.addEventListener('click', (event) => {
          event.preventDefault();
          const selectedPage = parseInt(link.getAttribute('data-page'));
          if (selectedPage !== currentPage) {
            window.location.href = `/product?page=${selectedPage},limit=${limit}`;
          }
        });
      });


     
    </script>
  </body>
</html>

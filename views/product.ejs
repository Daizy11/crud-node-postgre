<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link
      href="https://www.jqueryscript.net/css/jquerysctipttop.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.2/flatly/bootstrap.min.css"
    />
    <link href="src/jquery.inputpicker.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body style="background: #f5f7fa; color: #404e67">
    <div class="navbar">
      <a href="">Stock</a>
      <a href="">Penjualan</a>
      <a href="/">Pembayaran</a>
      <a href="/product">Product</a>
      <a href="/productCat">productCategory</a>
    </div>

    <div class="content-container">
      <div class="table-wrapper">
        <div class="tampilan">
          <h3 style="font-size: 2rem">Produk</h3>
          <a href="add">
            <button
              style="padding: 10px; margin: 0px 0px 0px 20px"
              class="btn-add"
            >
              ADD
            </button></a
          >
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nama Produk</th>
              <th>Produk CategoryID</th>
              <th style="width: 200px">Actions</th>
            </tr>
          </thead>

          <tbody id="tbody">
            <% users.data.forEach((row,index)=>{ %>
            <tr>
              <td><%= (page - 1) * limit + index + 1 %></td>
              <td><%= row.product %></td>
              <td><%= row.productCategoryID %></td>
              <td class="action">
                <a href="/edit/<%= row.id %>">
                  <button class="btn-edit">Edit</button></a
                >
                <a href="/delete/<%= row.id %>"
                  ><button class="btn-delete">Delete</button></a
                >
              </td>
            </tr>

            <% }) %>
          </tbody>
        </table>

        <div
          class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6"
        >
          <div class="flex flex-1 justify-between sm:hidden">
            <a
              href="#"
              class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
              >Previous</a
            >
            <a
              href="#"
              class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
              >Next</a
            >
          </div>
          <div
            class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between"
          >
            <div>
              <nav
                class="isolate inline-flex -space-x-px rounded-md shadow-sm"
                aria-label="Pagination"
                id="nav"
              >
                <a
                  href="#"
                  class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                >
                  <span class="sr-only">Previous</span>
                  <svg
                    class="h-5 w-5"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
             
                  <!-- Current: "z-10 bg-indigo-600 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", Default: "text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-offset-0" -->
                <% for(let i=1; i<= totalPage; i++) { %>
                <a
                  href="#"
                  data-page="<%= i %>"
                  aria-current="page"
                  class="relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                  ><%= i %></a
                >
                <% } %>
                <a
                  href="#"
                  class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                >
                  <span class="sr-only">Next</span>
                  <svg
                    class="h-5 w-5"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      data-page="<%= page %>"
      data-limit="<%= limit %>"
      totalPage="<%= totalPage %>"
    >
      const scriptElement = document.currentScript;
      const pageLinks = document.querySelectorAll("[data-page]");
      const currentPage = scriptElement.getAttribute("data-page");
      const limit = scriptElement.getAttribute("data-limit");
      const totalPage = scriptElement.getAttribute("totalPage");

      pageLinks.forEach((link) => {
        link.addEventListener("click", (event) => {
          event.preventDefault();
          const selectedPage = parseInt(link.getAttribute("data-page"));
          if (selectedPage !== currentPage) {
            window.location.href = `/product?page=${selectedPage},limit=${limit}`;
          }
        });
      });
    </script>
  </body>
</html>
